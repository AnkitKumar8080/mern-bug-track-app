pipeline{
    agent any
    environment {
        PATH = "$PATH:/usr/bin"
    }
    stages{
        stage('Checkout'){
            steps{
                checkout scm
            }
        }

        stage('Build and Deploy'){
            steps{
                script{
                    sh 'docker compose --version'
                    //build and deploy app using docker compose 
                    sh 'docker compose up -d --build'
                }
            }
        }
    }
    post{
        success{
            echo 'Deployment successfull !'
        }
        failure{
            echo 'Deployment failure !'
        }
    }
}
